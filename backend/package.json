{
    "name": "postgres-auth-server",
    "version": "1.0.0",
    "description": "Node.js authentication server with PostgreSQL",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "migrate:up": "node migrations/migrate.js up",
        "migrate:down": "node migrations/migrate.js down",
        "migrate:status": "node migrations/migrate.js status",
        "db:reset": "npm run migrate:down 002_add_user_roles.sql && npm run migrate:down 001_create_users_table.sql && npm run migrate:up",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "dependencies": {
        "@solana/web3.js": "^1.98.4",
        "bcrypt": "^5.1.1",
        "bip39": "^3.1.0",
        "cors": "^2.8.5",
        "dotenv": "^16.6.1",
        "ed25519-hd-key": "^1.3.0",
        "express": "^4.21.2",
        "jsonwebtoken": "^9.0.2",
        "pg": "^8.16.3"
    },
    "devDependencies": {
        "nodemon": "^3.1.10"
    },
    "keywords": [
        "node",
        "express",
        "postgresql",
        "authentication",
        "jwt"
    ],
    "author": "Your Name",
    "license": "MIT"
}
